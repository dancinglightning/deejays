    %h2.wsite-content-title{:style => "text-align:left;"}
      Conscious Dance deejays -
      %span 248 members worldwide, and 2,207 songs in the Music Database
      %br/
    %span.imgPusher{:style => "float:right;height:0px"}
    %span{:style => "display: table;z-index:10;width:auto;position:relative;float:right;max-width:100%;;clear:right;margin-top:5px;*margin-top:10px"}
      %a.main_image= image_tag "d.jpg"
