.row
  .col-md-3
  .col-md-6
    %h1 Editing song

    = simple_form_for(@song) do |f|
      = f.error_notification

      .form-inputs
        %br
        = f.label "Song added by: #{@song.user_name}"
        = f.label "Song added at: #{@song.added_on}"
          -if admin?
          = f.input :date_added
      = render 'form_fields' , { :f => f}
    %br
    -if admin?
      = link_to "Delete", song_path(@song), method: :delete , class: "btn btn-danger",
              data: { confirm: "Can't undo delete. Ok?" }
    \|
    = link_to 'Cancel', songs_path
