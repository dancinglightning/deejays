= simple_form_for(@song) do |f|
  = f.error_notification

  .form-inputs
    = f.hidden_field :user_id , :value => current_user.id
    = f.label "Song added at: #{@song.added_on}" unless @song.new_record?
    %br
    -if @song.new_record?
      = f.hidden_field :user_id , :value => current_user.id
    -else
      = f.label "Song added by: #{@song.user_name}"
      -if admin?
        = f.input :date_added
    = f.input :title
    = f.input :artist
    = f.input :album
    = f.input :tempo
    = f.input :main_genre
    = f.input :sub_genre
    = f.input :link
    = f.input :info

  .form-actions
    = f.button :submit
