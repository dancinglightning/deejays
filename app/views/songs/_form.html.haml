= simple_form_for(@song) do |f|
  = f.error_notification

  .form-inputs
    -if admin?
      = f.label "was #{@song.added}"
      = f.input :date_added
    = f.input :title
    = f.input :artist
    = f.input :album
    = f.input :tempo
    = f.input :main_genre
    = f.input :sub_genre
    = f.input :link
    = f.input :info

  .form-actions
    = f.button :submit
